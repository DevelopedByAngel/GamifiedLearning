<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Learn"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solar System | Planets"/>
    <RadioGroup
        android:id="@+id/topic"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="4"
        >
        <RadioButton
            android:id="@+id/mercury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mercury"
            android:button="@color/colorPrimary"/>
        <RadioButton
            android:id="@+id/venus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venus"
            android:button="@color/colorPrimary"/>
        <RadioButton
            android:id="@+id/earth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earth"
            android:button="@color/colorPrimary"/>
        <RadioButton
            android:id="@+id/mars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mars"
            android:button="@color/colorPrimary"/>
        <RadioButton
            android:id="@+id/jupiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jupiter"
            android:button="@color/colorPrimary"/>
        <RadioButton
            android:id="@+id/saturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saturn"
            android:button="@color/colorPrimary"/>
        <RadioButton
            android:id="@+id/uranus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uranus"
            android:button="@color/colorPrimary"/>
        <RadioButton
            android:id="@+id/neptune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neptune"
            android:button="@color/colorPrimary"/>
    </GridLayout>
    </RadioGroup>

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ok"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="40dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="okokok"
        />

  </LinearLayout>